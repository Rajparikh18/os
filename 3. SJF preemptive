#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;

    vector<int> at(n), bt(n), rt(n), ct(n), tat(n), wt(n), pid(n);

    for (int i = 0; i < n; i++) {
        pid[i] = i + 1;
        cout << "Arrival time for P" << i + 1 << ": ";
        cin >> at[i];
        cout << "Burst time for P" << i + 1 << ": ";
        cin >> bt[i];
        rt[i] = bt[i];
    }

    int completed = 0;
    int time = 0;
    int last = -1;

    while (completed < n) {
        int idx = -1;
        int minRT = INT_MAX;

        for (int i = 0; i < n; i++) {
            if (at[i] <= time && rt[i] > 0 && rt[i] < minRT) {
                minRT = rt[i];
                idx = i;
            }
        }

        if (idx == -1) {
            time++;
            continue;
        }

        rt[idx]--;
        time++;

        if (rt[idx] == 0) {
            completed++;
            ct[idx] = time;
            tat[idx] = ct[idx] - at[idx];
            wt[idx] = tat[idx] - bt[idx];
        }
    }

    cout << "P   AT   BT   CT   TAT   WT\n";
    for (int i = 0; i < n; i++) {
        cout << pid[i] << "   " << at[i] << "    " << bt[i]
             << "    " << ct[i] << "    " << tat[i]
             << "     " << wt[i] << "\n";
    }

    return 0;
}
