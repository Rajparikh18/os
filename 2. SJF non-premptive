#include <bits/stdc++.h>
using namespace std;

struct Process {
    int id, at, bt, ft, tat, wt;
};

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;

    vector<Process> p(n);

    for (int i = 0; i < n; i++) {
        p[i].id = i + 1;
        cout << "Arrival time for P" << i+1 << ": ";
        cin >> p[i].at;
        cout << "Burst time for P" << i+1 << ": ";
        cin >> p[i].bt;
    }

    vector<bool> done(n, false);
    int completed = 0, time = 0;

    while (completed < n) {
        int idx = -1;
        int mn = INT_MAX;

        for (int i = 0; i < n; i++) {
            if (!done[i] && p[i].at <= time && p[i].bt < mn) {
                mn = p[i].bt;
                idx = i;
            }
        }

        if (idx == -1) {
            time++;
            continue;
        }

        time += p[idx].bt;
        p[idx].ft = time;
        done[idx] = true;
        completed++;
    }

    cout << "P  AT  BT  FT  TAT  WT\n";
    for (int i = 0; i < n; i++) {
        p[i].tat = p[i].ft - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;

        cout << p[i].id << "  " << p[i].at << "  " << p[i].bt
             << "  " << p[i].ft << "  " << p[i].tat << "  " << p[i].wt << "\n";
    }

    return 0;
}
